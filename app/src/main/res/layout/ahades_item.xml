<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_ahades_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="الحديث الاول"
        android:gravity="center"
        android:fontFamily="@font/sura_content_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="28sp"

        />

    <TextView
        android:id="@+id/khat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_ahades_item"
        app:layout_constraintStart_toStartOf="@+id/txt_ahades_item"
        app:layout_constraintTop_toBottomOf="@id/txt_ahades_item"
        android:text="_____________________" />

</android.support.constraint.ConstraintLayout>