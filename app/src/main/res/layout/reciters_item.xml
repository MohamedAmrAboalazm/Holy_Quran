<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_reciter_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:text="بسم الله الرحمن الرحيم" />

    <ImageView
        android:id="@+id/play_aya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toEndOf="@+id/text_reciter_rewaya_item"
        app:layout_constraintStart_toStartOf="@+id/text_reciter_rewaya_item"
        app:layout_constraintTop_toBottomOf="@+id/text_reciter_rewaya_item" />

    <TextView
        android:id="@+id/text_reciter_rewaya_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/gold"

        android:fontFamily="@font/sura_content_font"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_reciter_name_item"
        tools:text="بسم الله الرحمن الرحيم" />

</android.support.constraint.ConstraintLayout>